<%= form_for @o_single, :html => { :class => 'form-horizontal' } do |f| %>
	
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'input-xlarge' %>
       	<% if @o_single.errors[:name].any? %>
        	<span class="text-error"><%= @o_single.errors[:name].first %></span>
      	<% end %>        
      </div>
    </div>		
		
    <div class="control-group">
      <%= f.label :page_route, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :page_route, :class => 'input-xlarge' %>
       	<% if @o_single.errors[:page_route].any? %>
        	<span class="text-error"><%= @o_single.errors[:page_route].first %></span>
      	<% end %>        
      </div>
    </div>
    
    <div class="control-group <%= @o_single.errors[:content].any? ? 'error' : '' %>">
      <%= f.label :content, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content, :class => 'input-xlarge', :placeholder => t("general.content"), :class => "textArea" %>
       	<% if @o_single.errors[:content].any? %>
        	<span class="text-error"><%= @o_single.errors[:content].first %></span>
      	<% end %>
      </div>
    </div>
    
   
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', footer_pages_url, :class => 'btn' %>
    </div>
    
<% end %>


<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this contributor from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.number_field :first_name %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  
<script type="text/javascript">

$('#user_birth_date').datetimepicker({
    language: 'en',
    format: "dd/MM/yyyy"
  });

</script>

<script type="text/javascript" charset="utf-8">
FB.init({
    appId: '1416252865305926', 
    status: true, 
    cookie: true,
    xfbml: true
});

function share_prompt()
{
    FB.ui(
       {
         method: 'feed',
         name: 'Fullfill Your Wish',
         link: 'http://goo.gl/5oIR',
         //picture: '<%= image_tag "images.jpg" %>',
         caption: 'Our application is to fullfill the user wishes by collecting the fund from friend for their events.',
         description: 'My current event is "<%= @event_product.get_event_name(@event_product.event_id) %>" For that I have wish to buy "<%=  @event_product.get_product_name(@event_product.product_id) %>", So send me your contribution as gift for my event.',
         message: 'Make easy to collecting gift of your wish!'
       },
       function(response) {
         if (response && response.post_id) {
           alert('Post was published.');
         } else {
           alert('Post was not published.');
         }
       }
     );
 }

</script>
